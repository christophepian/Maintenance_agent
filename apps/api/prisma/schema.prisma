enum RequestEventType {
  ARRIVED
  PARTS_ORDERED
  COMPLETED
  NOTE
  OTHER
}

model RequestEvent {
  id           String           @id @default(uuid())
  requestId    String
  contractorId String
  type         RequestEventType
  message      String
  timestamp    DateTime        @default(now())

  request      Request         @relation(fields: [requestId], references: [id], onDelete: Cascade)
  contractor   Contractor      @relation(fields: [contractorId], references: [id], onDelete: Cascade)

  @@index([requestId])
  @@index([contractorId])
}
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  TENANT
  CONTRACTOR
  MANAGER
}

enum RequestStatus {
  PENDING_REVIEW
  AUTO_APPROVED
  APPROVED
  ASSIGNED
  IN_PROGRESS
  COMPLETED
}

model Org {
  id           String       @id @default(uuid())
  name         String
  users        User[]
  contractors  Contractor[]
  config       OrgConfig?
  tenants      Tenant[]
  buildings    Building[]
}

model OrgConfig {
  id               String @id @default(uuid())
  orgId            String @unique
  autoApproveLimit Int    @default(200) // CHF

  org Org @relation(fields: [orgId], references: [id], onDelete: Cascade)
}

model User {
  id    String @id @default(uuid())
  orgId String
  org   Org    @relation(fields: [orgId], references: [id])
  role  Role
  name  String
  email String?
  passwordHash String? // bcrypt hash; null = legacy/dev user
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([orgId, email], name: "user_org_email_unique")
}

model Contractor {
  id                String    @id @default(uuid())
  orgId             String
  org               Org       @relation(fields: [orgId], references: [id], onDelete: Cascade)
  name              String
  phone             String
  email             String
  hourlyRate        Int       @default(50) // CHF
  serviceCategories String    // JSON array of categories: ["stove", "oven", "dishwasher"]
  isActive          Boolean   @default(true)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  requests          Request[]
  events            RequestEvent[]
}

model Request {
  id                   String        @id @default(uuid())
  description          String
  category             String?
  estimatedCost        Int?          // CHF (nullable = truly optional)
  status               RequestStatus @default(PENDING_REVIEW)

  // NEW: store tenant-entered phone even when tenantId is null
  contactPhone         String?

  assignedContractorId String?
  assignedContractor   Contractor?   @relation(fields: [assignedContractorId], references: [id])

  tenantId             String?
  tenant               Tenant?       @relation(fields: [tenantId], references: [id])

  unitId               String?
  unit                 Unit?         @relation(fields: [unitId], references: [id])

  applianceId          String?
  appliance            Appliance?    @relation(fields: [applianceId], references: [id])

  contractorNotes      String?
  startedAt            DateTime?
  completedAt          DateTime?
  updatedAt            DateTime      @updatedAt @default(now())


  createdAt            DateTime      @default(now())
  events                RequestEvent[]
}


model Event {
  id           String   @id @default(uuid())
  orgId        String
  type         String
  actorUserId  String?
  requestId    String?
  payload      String   @default("{}") // JSON string for MVP
  createdAt    DateTime @default(now())

  @@index([orgId, createdAt])
  @@index([requestId])
}

model Tenant {
  id        String    @id @default(uuid())
  orgId     String
  org       Org       @relation(fields: [orgId], references: [id], onDelete: Cascade)
  name      String?
  phone     String    // E.164 format
  email     String?
  unitId    String?
  unit      Unit?     @relation(fields: [unitId], references: [id])
  requests  Request[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([orgId, phone])
  @@index([orgId, phone])
}

model Building {
  id        String    @id @default(uuid())
  orgId     String
  org       Org       @relation(fields: [orgId], references: [id], onDelete: Cascade)
  name      String
  address   String
  units     Unit[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([orgId])
}

model Unit {
  id         String      @id @default(uuid())
  buildingId String
  building   Building    @relation(fields: [buildingId], references: [id], onDelete: Cascade)
  unitNumber String
  floor      String?
  tenants    Tenant[]
  appliances Appliance[]
  requests   Request[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@unique([buildingId, unitNumber])
  @@index([buildingId])
}

model Appliance {
  id           String      @id @default(uuid())
  unitId       String
  unit         Unit        @relation(fields: [unitId], references: [id], onDelete: Cascade)
  assetModelId String?
  assetModel   AssetModel? @relation(fields: [assetModelId], references: [id])
  name         String
  serial       String?
  installDate  DateTime?
  notes        String?
  requests     Request[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([unitId])
}

model AssetModel {
  id           String      @id @default(uuid())
  orgId        String
  manufacturer String
  model        String
  category     String
  specs        String?     // JSON specs
  appliances   Appliance[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@unique([orgId, manufacturer, model])
  @@index([orgId, category])
}
